@keyframes fadeInRight
  0%
    opacity: 0
    transform: translateX(20px)

  100%
    opacity: 1
    transform: translateX(0)

@keyframes fadeInRightBig
  0%
    opacity: 0
    transform: translateX(2000px)

  100%
    opacity: 1
    transform: translateX(0)

@keyframes fadeOutRight
  0%
    opacity: 1
    transform: translateX(0)

  100%
    opacity: 0
    transform: translateX(20px)

@keyframes fadeOutRightBig
  0%
    opacity: 1
    transform: translateX(0)

  100%
    opacity: 0
    transform: translateX(2000px)