$btn-count = 4
$btn-bg = rgba(black, .05)
$icon-bg = white
$icon-size = 30px
$nav-speed = .2s

nav, nav ul
  position: fixed
  width: 100%
  height: 100%
  z-index: 900
nav
  left: 150%
.toggle:checked ~ nav
  left: 0
nav ul li
  display: table
  width: 100%
  height: s('calc(100% /'+$btn-count+')')
  border-bottom: 1px solid rgba(black, .1)
  background: rgba(white, .5)
nav ul li a
  display: table-cell
  vertical-align: middle
  text-align: center
  color: white

.toggle, .toggle-btn, .nav-icon
  position: fixed
  height: $icon-size
  width: $icon-size
  top: 15px
  right: 15px
.toggle
  display: none
.toggle-btn
  cursor: pointer
   z-index 1000
.nav-icon, .nav-icon:before, .nav-icon:after
  position fixed
  content: ""
  width: $icon-size
  height: ($icon-size/10)
  margin: ($icon-size/2)-($icon-size/20) 0
  border-radius: ($icon-size/20)
  background: $icon-bg
  z-index 950
.nav-icon:before
  margin-top: ($icon-size/-2)-($icon-size/-20)
.nav-icon:after
  margin-top: ($icon-size/2)-($icon-size/20)
.toggle:checked ~ .nav-icon
  background: none
.toggle:checked ~ .nav-icon:before,
.toggle:checked ~ .nav-icon:after
  width: $icon-size
  height: ($icon-size/10)
  margin-top: 0
.toggle:checked ~ .nav-icon:before
  transform: rotate(-225deg)
.toggle:checked ~ .nav-icon:after
  transform: rotate(225deg)
nav, .nav-icon, .nav-icon:before, .nav-icon:after
  transition all $nav-speed ease
.home .nav-home a,
.about .nav-about a,
.services .nav-services a,
.contact .nav-contact a
  background: rgba(white, .2)
  color: #777