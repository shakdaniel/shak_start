html, body
  width: 100%
  height: 100%

*, *:before, *:after
  box-sizing: border-box
.clearfix
  zoom: 1
.clearfix:before, .clearfix:after
  content: ''
  display: table
.clearfix:after
  clear: both

.box
  position: relative
  width: 100%
  top: 0
  background: DarkSlateBlue
  padding: 2em 0
  color: white
  @media mobile
    background: #111
  @media tablet
    background: #222
  @media desktop
    background: #333
.box:nth-child(3n+2)
  background: SlateBlue
.box:nth-child(3n+3)
  background: MediumSlateBlue