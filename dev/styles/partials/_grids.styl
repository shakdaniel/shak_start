html, body
  width: 100%
  height: 100%

*, *:before, *:after
  box-sizing: border-box
.clearfix
  zoom: 1
.clearfix:before, .clearfix:after
  content: ''
  display: table
.clearfix:after
  clear: both

h1
  font-size: 1.5em
  padding: .5em 0
  letter-spacing: .5em
  text-indent: .5em
  font-weight: lighter
  font-family: sans-serif
  @media mobile
    font-size: 2em
  @media tablet
    font-size: 3em
  @media desktop
    font-size: 4em
h1:after
  content: ''
  position: absolute
  width: 10%
  height: 2px
  background: #fff
  left: 45%
  bottom: .1em
p
  font-size: 1.5em
  letter-spacing: .1em
  font-weight: 100
  padding: 1em 0
  font-style: italic
  font-family: cursive
  @media mobile
    font-size: 2em
  @media tablet
    font-size: 3em
  @media desktop
    font-size: 4em

.box
  position: relative
  width: 100%
  top: 0
  background: DarkSlateBlue
  padding: 2em 0
  color: white
  @media mobile
    background: #111
  @media tablet
    background: #222
  @media desktop
    background: #222
.box:nth-child(3n+2)
  background: SlateBlue
.box:nth-child(3n+3)
  background: MediumSlateBlue
  
