$btn-count = 5
$nav-bg = rgba(slateblue, .9)
$btn-active = rgba(white, .2)
$btn-hover = rgba(white, .05)
$icon-bg = white
$icon-size = 20px
$nav-speed = .2s

// body's class followed by nav li's class.
$active = ".home .nav-home"


{$active}
  background: $btn-active

nav, nav ul
  position: fixed
  width: 100%
  height: 100%
  z-index: 900
  background: $nav-bg

nav
  left: 150%

.toggle:checked ~ nav
  left: 0

nav ul li
  display: table
  width: 100%
  height: s('calc(100% / '+$btn-count+')')

nav ul li:hover
  background: $btn-hover

nav ul li a
  display: table-cell
  vertical-align: middle
  text-align: center
  font-size: 1.5em
  letter-spacing: .2em
  color: white

.toggle,
.toggle-btn,
.nav-icon
  position: fixed
  height: $icon-size
  width: $icon-size
  top: 15px
  right: 15px

.toggle
  display: none

.toggle-btn
  cursor: pointer
   z-index 1000

.nav-icon,
.nav-icon:before,
.nav-icon:after
  position fixed
  content: ""
  width: $icon-size
  height: ($icon-size/10)
  margin: ($icon-size/2)-($icon-size/20) 0
  border-radius: ($icon-size/20)
  background: $icon-bg
  z-index 950

.nav-icon:before
  margin-top: ($icon-size/-2)-($icon-size/-20)

.nav-icon:after
  margin-top: ($icon-size/2)-($icon-size/20)

.toggle:checked ~ .nav-icon
  background: none

.toggle:checked ~ .nav-icon:before,
.toggle:checked ~ .nav-icon:after
  width: $icon-size
  height: ($icon-size/10)
  margin-top: 0

.toggle:checked ~ .nav-icon:before
  transform: rotate(-225deg)

.toggle:checked ~ .nav-icon:after
  transform: rotate(225deg)

nav,
.nav-icon,
.nav-icon:before,
.nav-icon:after
  transition all $nav-speed ease