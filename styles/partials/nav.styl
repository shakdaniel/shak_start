// How much buttons in navigation?
$btnscount ?= 4
$btnheight ?= s('calc(100% /'+$btnscount+')')

nav, nav ul
  position fixed
  width 100%
  height 100%
nav
  left 150%
nav ul li
  display: table
  width 100%
  height: $btnheight
nav ul li a
  display: table-cell
  vertical-align: middle
  text-align: center
#toggle
  display: none

#toggle + #toggle-btn, .nav-icon
  position absolute
  top 15px
  right 15px
  cursor pointer
  background: rgba(black, .05)
  border-radius: 3px
#toggle + #toggle-btn
  height 40px
  width 40px
  z-index 1000
.nav-icon, .nav-icon:before, .nav-icon:after
  position absolute
  height 8px
  width 40px
  margin: 16px 0
  z-index 900
  border-radius: 3px
  background: rgba(red, .5)
.nav-icon:before
  content: ""
  margin-top:-16px
.nav-icon:after
  content: ""
  margin-top:16px
#toggle:checked ~ nav
  left: 0%
#toggle:checked ~ .nav-icon
  background: rgba(red, 0)
#toggle:checked ~ .nav-icon:before,
#toggle:checked ~ .nav-icon:after
  width: 40px
  height: 8px
  margin-top: 0
#toggle:checked ~ .nav-icon:before
  transform: rotate(-225deg)
#toggle:checked ~ .nav-icon:after
  transform: rotate(225deg)
nav, .nav-icon, .nav-icon:before, .nav-icon:after
  transition all .25s ease